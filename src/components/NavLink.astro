---
type Props = astroHTML.JSX.AnchorHTMLAttributes;
const { props } = Astro;
---

<a
  class={`rounded-xl px-4 py-2 transition-colors duration-100 sm:py-3 ${
    Astro.url.pathname.startsWith(props.href as string)
      ? "bg-gray-300 dark:bg-gray-600"
      : "hover:bg-gray-200 dark:hover:bg-gray-700"
  }`}
  {...props}><slot /></a
>
